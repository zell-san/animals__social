@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size 100%
	height 100%
	line-height 1.3
	color blackTextDG

	@media screen and (max-width smallPhoneWidth)
		font-size 70%

body
	font-size baseFontSize
	height 100%
	background-color greyDG
    font-family FiraSans
    font-style: normal
    font-weight: normal
    line-height: 17px
    letter-spacing: 1px
	background greyBBbg

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color blackTextDG
	text-decoration none

	&:hover
		text-decoration none
		cursor pointer

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	width 100%
	max-width desktopWidth
	padding 0 15px
	font-family FiraSans

.container-fluid
	width 100%
	justify-content center
	display flex


