								.delivery__deposit
									.delivery__deposit-title Deposit
									.delivery__deposit-time No more than 7 days
									.delivery__deposit-sum $300
						.page__content-right
							.profile
								.profile__check
									+icon('check', 'check-profile')
								.profile__box
									.profile__avatar
										img(src='static/img/content/43.png')
									.profile__info
										.profile__info-id ID 742182
										.profile__info-secondname Dobrev
										.profile__info-name Nina
								.profile__box.profile__skill
									.profile__skill-red Manufacturer
									.profile__skill-blue Dog handler
									.profile__skill-btn-last +2
								a.profile__number
									+icon('phone')
									span.profile__number-text Show phone
								a.profile__message
									+icon('pen')
									span.profile__message-text To write a message
								.profile__address
									input.profile__address-input(placeholder='775 Westminster Avenue APT D5 Brooklyn, NY, 11230')
									+icon('flag')
								.profile__box.profile__bottom
									.profile__bottom-star
										+icon('star', 'star-prof')
										span 4.9
									.profile__bottom-like
										+icon('like-prof')
							.document
								.document__title Related Documents
								.document__box
									+icon('doc')
									.document__text Contract of sale
									+icon('button')
