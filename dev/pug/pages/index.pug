								.post__bottom
									.post__bottom-left Share:
									.post__bottom-right
										+icon('facebook', 'social')
										+icon('telegram', 'social')
										+icon('viber', 'social')
										+icon('twitter1', 'social')

							.extra
								.extra__title Additionally
								.extra__slider
									img.extra__slider-left(src="static/img/general/left.png")
									.extra__slider-item
										.extra__slider-item-content
											.extra__slider-item-content-img
												+icon('standart', 'extra-icon')
											.extra__slider-item-content-text Meets the standard
										.extra__slider-item-border
									.extra__slider-item
										.extra__slider-item-content
											.extra__slider-item-content-img
												+icon('toilet', 'extra-icon')
											.extra__slider-item-content-text Accustomed to the toilet
										.extra__slider-item-border
									.extra__slider-item
										.extra__slider-item-content
											.extra__slider-item-content-img
												+icon('cup', 'extra-icon')
											.extra__slider-item-content-text There are champions in the family
										.extra__slider-item-border
									.extra__slider-item
										.extra__slider-item-content
											.extra__slider-item-content-img
												+icon('libra', 'extra-icon')
											.extra__slider-item-content-text Accustomed to water (wash)
										.extra__slider-item-border
									.extra__slider-item
										.extra__slider-item-content
											.extra__slider-item-content-img
												+icon('car', 'extra-icon')
											.extra__slider-item-content-text Carries the road
										.extra__slider-item-border
									img.extra__slider-right(src="static/img/general/right.png")
							.delivery
								.delivery__country
									.delivery__country-title Delivery
									.delivery__country-box
										.delivery__country-name United States
										.delivery__country-descr Brooklyn, NY, 11230
