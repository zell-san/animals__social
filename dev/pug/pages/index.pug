							.page__content-portfolio-slider-img
								img(src="static/img/content/noun_Photo_2059814.png")
							img.page__content-portfolio-slider-right(src="static/img/general/right.png")
					.page__content-block
						.page__content-center
							.page__content-center-post
								.page__content-center-post-title Information
