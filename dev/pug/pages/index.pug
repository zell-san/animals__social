extends ../layout/main

block variables
	- var title = 'Page'
	- var pageClass = 'index-page'

block content

	include ../modules/menu

	.container-fluid.page
		.container
			include ../modules/breadcrumb
			H1.page__title Don Sphinx - cat - grey
			.page__box
				include ../modules/sidebar
				.page__content
					.page__content-portfolio
